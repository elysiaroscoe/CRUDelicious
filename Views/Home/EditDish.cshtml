@model CRUDelicious.Models.Dish


<div class="d-flex justify-content-center mt-5">
    <h1>Edit Your Dish!</h1>
</div>

<div class="d-flex justify-content-center">
    <a href="http://localhost:5000/">Home</a>
</div>

<div class="d-flex justify-content-around mt-5">
    <form asp-action="UpdateDish">
        <div class="container d-flex flex-row">
            <div class="mr-5">
                <div>
                    <span asp-validation-for="Chef"></span>
                    <label asp-for="Chef"></label>
                    <input asp-for="Chef">
                </div>
                <div>
                    <span asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                </div>
                <div>
                    <span asp-validation-for="Calories"></span>
                    <label asp-for="Calories"></label>
                    <input asp-for="Calories">
                </div>
            </div>
            <div class="mr-5">
                <div>
                    <span asp-validation-for="Tastiness"></span>
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
            </div>
            <div>
                <div>
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description"></label>
                    <input asp-for="Description">
                </div>
                <div>
                    <input type="submit" value="Submit Your Edits!">
                </div>
            </div>
        </div>
    </form>
</div>